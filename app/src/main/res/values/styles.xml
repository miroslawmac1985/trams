<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#43525e</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:homeAsUpIndicator">@drawable/back_arrow</item>
    </style>

    <style name="tram_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:textColor">#41515c</item>
        <item name="android:textSize">26dp</item>
    </style>

    <style name="tram_night_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/button_night</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:textColor">#41515c</item>
        <item name="android:textSize">26dp</item>
    </style>

    <style name="menu_opt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">26dp</item>
    </style>

    <style name="menu_opt_img">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="hr">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#303d47</item>
    </style>

</resources>
