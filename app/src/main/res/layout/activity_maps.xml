<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.yoho.trams.MapsActivity" />

    <android.support.v7.widget.Toolbar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/gradient"
        android:paddingRight="16dp"
        android:textColor="#fff"
        android:textAlignment="center"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"/>

        <ImageButton
            android:id="@+id/btn_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/menu"
            android:onClick="slideMenu">
        </ImageButton>

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btm_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btm_btn"
            android:onClick="slideUpDown"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/hidden_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@drawable/gradient"
        >

        <ImageButton
            android:id="@+id/btm_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btm_close"
            android:onClick="slideUpDown">
        </ImageButton>

        <LinearLayout
            android:id="@+id/filtr_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btm_close"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    style="@style/tram_btn"
                    android:id="@+id/tram_btn_1"
                    android:text="1"
                    android:onClick="tramNrClick"/>

                <Button
                    style="@style/tram_btn"
                    android:id="@+id/tram_btn_2"
                    android:text="2"
                    android:onClick="tramNrClick"/>

                <Button
                    style="@style/tram_btn"
                    android:id="@+id/tram_btn_3"
                    android:text="3"
                    android:onClick="tramNrClick"/>

                <Button
                    style="@style/tram_btn"
                    android:id="@+id/tram_btn_4"
                    android:text="4"
                    android:onClick="tramNrClick"/>

                <Button
                    style="@style/tram_btn"
                    android:id="@+id/tram_btn_5"
                    android:text="5"
                    android:onClick="tramNrClick"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    style="@style/tram_btn"
                    android:id="@+id/tram_btn_6"
                    android:text="6"
                    android:onClick="tramNrClick"/>

                <Button
                    style="@style/tram_btn"
                    android:id="@+id/tram_btn_7"
                    android:text="7"
                    android:onClick="tramNrClick"/>

                <Button
                    style="@style/tram_btn"
                    android:id="@+id/tram_btn_8"
                    android:text="8"
                    android:onClick="tramNrClick"/>

                <Button
                    style="@style/tram_btn"
                    android:id="@+id/tram_btn_9"
                    android:text="9"
                    android:onClick="tramNrClick"/>

                <Button
                    style="@style/tram_btn"
                    android:id="@+id/tram_btn_10"
                    android:text="10"
                    android:onClick="tramNrClick"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    style="@style/tram_btn"
                    android:id="@+id/tram_btn_11"
                    android:text="11"
                    android:onClick="tramNrClick"/>

                <Button
                    style="@style/tram_btn"
                    android:id="@+id/tram_btn_12"
                    android:text="12"
                    android:onClick="tramNrClick"/>

                <Button
                    style="@style/tram_btn"
                    android:id="@+id/tram_btn_13"
                    android:text="13"
                    android:onClick="tramNrClick"/>

                <Button
                    style="@style/tram_btn"
                    android:id="@+id/tram_btn_14"
                    android:text="14"
                    android:onClick="tramNrClick"/>

                <Button
                    style="@style/tram_btn"
                    android:id="@+id/tram_btn_16"
                    android:text="16"
                    android:onClick="tramNrClick"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    style="@style/tram_btn"
                    android:id="@+id/tram_btn_18"
                    android:text="18"
                    android:onClick="tramNrClick"/>

                <Button
                    style="@style/tram_btn"
                    android:id="@+id/tram_btn_19"
                    android:text="19"
                    android:onClick="tramNrClick"/>

                <Button
                    style="@style/tram_btn"
                    android:id="@+id/tram_btn_20"
                    android:text="20"
                    android:onClick="tramNrClick"/>

                <Button
                    style="@style/tram_btn"
                    android:id="@+id/tram_btn_21"
                    android:text="21"
                    android:onClick="tramNrClick"/>

                <Button
                    style="@style/tram_btn"
                    android:id="@+id/tram_btn_22"
                    android:text="22"
                    android:onClick="tramNrClick"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    style="@style/tram_btn"
                    android:id="@+id/tram_btn_23"
                    android:text="23"
                    android:onClick="tramNrClick"/>

                <Button
                    style="@style/tram_btn"
                    android:id="@+id/tram_btn_24"
                    android:text="24"
                    android:onClick="tramNrClick"/>

                <Button
                    style="@style/tram_btn"
                    android:id="@+id/tram_btn_50"
                    android:text="50"
                    android:onClick="tramNrClick"/>

                <Button
                    style="@style/tram_btn"
                    android:id="@+id/tram_btn_52"
                    android:text="52"
                    android:onClick="tramNrClick"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    style="@style/tram_night_btn"
                    android:id="@+id/tram_btn_62"
                    android:text="62"
                    android:onClick="tramNrClick"/>

                <Button
                    style="@style/tram_night_btn"
                    android:id="@+id/tram_btn_64"
                    android:text="64"
                    android:onClick="tramNrClick"/>

                <Button
                    style="@style/tram_night_btn"
                    android:id="@+id/tram_btn_69"
                    android:text="69"
                    android:onClick="tramNrClick"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/menu_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient"
        >

        <android.support.v7.widget.Toolbar
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/my_toolbar2"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/gradient"
            android:textColor="#fff"
            android:textAlignment="center"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <ImageButton
                android:id="@+id/btn_menu2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:background="@drawable/btm_menu_close"
                android:onClick="slideMenu">
            </ImageButton>

        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@+id/my_toolbar2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:onClick="onActAboutClick">

                <TextView
                    android:id="@+id/menu_opt_1"
                    style="@style/menu_opt"
                    android:text="O APLIKACJI"
                    android:layout_toLeftOf="@+id/menu_opt_img_1"/>

                <ImageView
                    android:id="@+id/menu_opt_img_1"
                    style="@style/menu_opt_img"
                    android:src="@drawable/about"/>

            </RelativeLayout>

            <View
                style="@style/hr"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_toolbar2"
                android:padding="16dp"
                android:onClick="onActContactClick">

                <TextView
                    android:id="@+id/menu_opt_2"
                    style="@style/menu_opt"
                    android:text="KONTAKT"
                    android:layout_toLeftOf="@+id/menu_opt_img_2"/>

                <ImageView
                    android:id="@+id/menu_opt_img_2"
                    style="@style/menu_opt_img"
                    android:src="@drawable/contact"/>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>



